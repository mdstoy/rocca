{
	"manifest_version": 2,
	"name": "Rocca",
	"short_name": "Rocca",
	"version": "0.0.9.1",

	"default_locale": "ja",
	"description": "a rocker gesture extention",
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},

	"homepage_url": "https://github.com/mdstoy/rocca",

	"content_scripts": [ {
		"matches": [ "http://*/*", "https://*/*" ],
		"js": [ "jquery-2.1.1.min.js", "content.js" ]
	} ],
	"background": {
		"scripts": [ "event.js" ],
		"persistent": false
	},
	"permissions": [ "tabs", "storage" ],
	"options_page": "options.html"
}

